{
  "name": "svelte-app",
  "version": "1.0.0",
  "devDependencies": {
    "dotenv": "^8.0.0",
    "netlify-lambda": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.12.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^4.0.4",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "sirv-cli": "^0.4.4"
  },
  "scripts": {
    "netlify:build": "netlify-lambda build ./src/cloud-functions",
    "netlify:serve": "MODE=dev netlify-lambda serve ./src/cloud-functions",
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev",
    "build:sass": "rm -f ./public/materialize.css && node-sass ./public/sass -o ./public"
  }
}